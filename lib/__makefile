libtinystepperdriver.so: tinystepperdriver.o
	g++ -Wall -shared -Wl,-soname,libtinystepperdriver.so -o libtinystepperdriver.so  tinystepperdriver.o

tinystepperdriver.o: ../tinystepperdriver.cpp ../tinystepperdriver.hpp lib/Arduino.h
	g++ -Wall -Ilib -DTINYSTEPPERDRIVER_PYTHON_BIND -c -fPIC ../tinystepperdriver.cpp -o tinystepperdriver.o